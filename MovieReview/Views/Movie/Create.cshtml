

@model MovieViewModel

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Movie</h2>
            <hr />
            <div class="mb-3">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control"></input>
            </div>
 <div class="mb-3">
                <label asp-for="ReleaseYear">ReleaseYear</label>
                <input asp-for="ReleaseYear" class="form-control"></input>
            </div>
            <div class="mb-3">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control"></input>
            </div>
            <div class="mb-3">
                <label asp-for="Rating">Rating</label>
                <input asp-for="Rating" class="form-control"></input>
            </div>
            <div class="mb-3">
                <label asp-for="Genre">Genre</label>
                <input asp-for="Genre" class="form-control"></input>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-controller="Movie" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
        </div>
    </div>
</form>
