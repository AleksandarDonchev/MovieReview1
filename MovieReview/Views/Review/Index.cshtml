@model IEnumerable<ReviewViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Reviews</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Review" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Add Review</a>
        </div>
    </div>
    <br /> <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Username</th>
                <th>Rating</th>
                <th>Comments</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Username</td>
                    <td width="30%">@obj.Rating</td>
                    <td width="30%">@obj.Comments</td>
                    <td width="10%">
                        <a asp-controller="Review" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary">Update</a>
                    </td>
                    <td width="10%">
                        <form asp-controller="Review" asp-action="Delete" asp-route-id="@obj.Id" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
