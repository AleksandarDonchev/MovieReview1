@model ActorViewModel

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Actor</h2>
            <hr />
            <div class="mb-3">
                <label asp-for="FullName">Actor Name</label>
                <input asp-for="FullName" class="form-control"></input>
            </div>
            <div class="mb-3">
                <label asp-for="Rating">Rating</label>
                <input asp-for="Rating" class="form-control"></input>
            </div>
            <div class="mb-3">
                <label asp-for="Birthday">Birthday</label>
                <input asp-for="Birthday" class="form-control"></input>
            </div>
          
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-controller="Movie" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
        </div>
    </div>
</form>